<!DOCTYPE html>
<html>
  <head>
    <title>Thehairproject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<header>
  <% if logged_in? %>
    <div id="currentlyLoggedInDiv">
      <span id="loggedinHeader">Welcome, <%= current_user.name %> </span>

      <form action="/session" method="post">
        <input type="hidden" name="_method" value="delete">
        <button>Logout</button>
      </form>

    </div>
  <% else %>
    <div id="currentlyLoggedOutDiv">
      <form action="/session" method="post">
        <table>
          <tr>
            <td style="width: 20%"><label for="">Email</label></td>
            <td>
              <input type="text" name="email">
            </td>
          </tr>
          <tr>
            <td><label for="">Password</label></td>
            <td><input type="password" name="password"></td>

            <td style="width: 80%">
              <button>Login</button>
              <a id="signupLink" href="/users/new">Sign up </a>
            </td>
          </tr>
        </table>
      </form>
    </div>
  <% end %>


</header>






    <%= yield %>
  </body>

  <div class = "footer">

    <footer>&copy; Copyright 2016 The3Nuggets</footer>
  </div>

</html>
