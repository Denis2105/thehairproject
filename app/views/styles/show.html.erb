
<div class = "show_container">

  <div class="left_container">

    <div class="pic1">
      <img src="<%=@style.hairpicfront%>" alt="">
    </div>

    <div class="pic2">
      <img src="<%=@style.hairpicback%>" alt="">
    </div>

    <div class="pic3">
      <img src="<%=@style.hairpicside%>" alt="">
    </div>
  </div>

  <div class="right_container">
    <div class="table">
      <ul>
        <li><%=@style.hairdressername%></li>
        <li><%=@style.price%></li>
        <li><%=@style.rating%></li>
        <li><%=@style.tag%></li>
        <li><%=@style.studiowebsiteurl%></li>
        <li><%=@style.studioname%></li>
      </ul>
    </div>

  <a href="/styles/<%=@style.id%>/edit">Edit</a>

    <div class="map">

    </div>

    <form action="/styles/<%= @style.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button>Delete post</button>
    </form>

  </div>

  <% @style.comments.each do |comment| %>
      <div class="commentsSection">
          <div class="commentsContainer">
            <div class="commentsheader"><%= comment.user.name %>
              <% if comment.user.id == current_user.id %>
                <form action="/comments/<%= comment['id'] %>" method="post">
                  <input type="hidden" name="_method" value="delete">
                  <input type="hidden" name="style_id" value="<%=@style.id%>">
                  <button>Delete</button>
                </form>
              <% end %>

              <span class="userName">
                  <%= comment.created_at.to_formatted_s(:long_ordinal)  %>
              </span>
            </div>
            <div id="commentText"><%= comment.text %></div>
            <div style="clear: both;"></div>
          </div>
      </div>
  <% end %>

    <div class="newCommentContainer">
      <form id="newCommentsForm" action="/comments" method="post">
        <input type="hidden" name="style_id" value="<%= @style['id'] %>">
        <input type="text" name="newCommentText" id="newCommentText" placeholder="Write a comment..">
        <button>Submit</button>
      </form>
    </div>

    <div style="clear: both;"></div>
  </div>

</div>
